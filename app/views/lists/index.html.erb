<header class="banner-header bg-white">
  <p class="d-flex justify-content-end mx-0"><%= link_to 'Add new List', new_list_path, class: 'btn btn-primary' %></p>
  <div class="banner">
    <div class="container">
      <h1 class="d-flex justify-content-center">Save any kind of movies</h1>
    </div>
  </div>
</header>
<ul class="list-group mb-5">
  <% @lists.each do |list| %>
    <div class="card">
      <li><%= link_to list.name, list, class: "list-group-item bg-white" %></li>
    </div>
  <% end %>
</ul>
